@model IEnumerable<Bookstore.Models.Products>

@{
    ViewBag.Title = "Sản phẩm";
}

<div class="container py-4">
    <!-- Hidden anti-forgery token for AJAX requests -->
    @Html.AntiForgeryToken()
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-book"></i> Sản phẩm</h2>
        <span class="text-muted">@Model.Count() sản phẩm</span>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var item in Model)
        {
            var mainImage = item.ProductImages?.FirstOrDefault(pi => pi.IsMain)?.ImageUrl ?? "/Content/images/no-image.png";
            <div class="col">
                <div class="card h-100 shadow-sm product-card">
                    <a href="@Url.Action("Details", new { id = item.ProductId })">
                        <img src="@mainImage" class="card-img-top" alt="@item.Title" 
                             style="height: 200px; object-fit: cover;">
                    </a>
                    <div class="card-body d-flex flex-column">
                        <span class="badge bg-secondary mb-2" style="width: fit-content;">@(item.Categories != null ? item.Categories.Name : "")</span>
                        <h6 class="card-title">
                            <a href="@Url.Action("Details", new { id = item.ProductId })" class="text-decoration-none text-dark">
                                @item.Title
                            </a>
                        </h6>
                        <p class="card-text text-muted small mb-2">
                            <i class="bi bi-person"></i> @item.Author
                        </p>
                        <div class="mt-auto">
                            <p class="card-text fw-bold text-primary mb-2">@item.Price.ToString("N0")₫</p>
                            <div class="d-flex gap-2">
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductId }, new { @class = "btn btn-outline-primary btn-sm flex-grow-1" })
                                @if (Request.IsAuthenticated && item.Stock > 0)
                                {
                                    <button type="button" class="btn btn-primary btn-sm btn-add-to-cart" 
                                            data-product-id="@item.ProductId" title="Thêm vào giỏ">
                                        <i class="bi bi-cart-plus"></i>
                                    </button>
                                }
                                else if (item.Stock == 0)
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                            </div>
                        </div>
                    </div>
                    @if (item.Stock > 0 && item.Stock < 10)
                    {
                        <div class="card-footer bg-warning-subtle">
                            <small class="text-warning"><i class="bi bi-exclamation-triangle"></i> Chỉ còn @item.Stock sản phẩm</small>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

@section scripts {
    <script>
        $(document).ready(function () {
            var antiForgeryToken = $('input[name="__RequestVerificationToken"]').val();
            
            // Add to cart button click handler
            $('.btn-add-to-cart').click(function () {
                var $btn = $(this);
                var productId = $btn.data('product-id');
                var originalHtml = $btn.html();
                
                // Disable button and show loading
                $btn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span>');
                
                $.ajax({
                    url: '@Url.Action("Add", "Cart")',
                    type: 'POST',
                    data: {
                        ProductId: productId,
                        Quantity: 1,
                        __RequestVerificationToken: antiForgeryToken
                    },
                    success: function (response) {
                        if (response.Success) {
                            showToast(response.Message, 'success');
                            // Update cart badge if exists
                            updateCartBadge(response.CartCount);
                        } else {
                            showToast(response.Message, 'danger');
                        }
                    },
                    error: function () {
                        showToast('Có lỗi xảy ra. Vui lòng thử lại.', 'danger');
                    },
                    complete: function () {
                        $btn.prop('disabled', false).html(originalHtml);
                    }
                });
            });

            function showToast(message, type) {
                var toastHtml = '<div class="toast align-items-center text-white bg-' + type + ' border-0 position-fixed bottom-0 end-0 m-3" role="alert">' +
                    '<div class="d-flex">' +
                    '<div class="toast-body">' + message + '</div>' +
                    '<button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>' +
                    '</div></div>';
                var $toast = $(toastHtml).appendTo('body');
                var toast = new bootstrap.Toast($toast[0], { delay: 3000 });
                toast.show();
                $toast.on('hidden.bs.toast', function () { $(this).remove(); });
            }

            function updateCartBadge(count) {
                var $badge = $('.navbar .badge.bg-danger');
                if ($badge.length > 0) {
                    $badge.text(count);
                } else if (count > 0) {
                    // Reload page to update mini cart
                    location.reload();
                }
            }
        });
    </script>
}