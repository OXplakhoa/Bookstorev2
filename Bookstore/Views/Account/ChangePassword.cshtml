@model Bookstore.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Đổi mật khẩu";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow mt-5">
            <div class="card-header bg-warning text-dark text-center">
                <h4 class="mb-0"><i class="bi bi-key"></i> Đổi mật khẩu</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "needs-validation" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(m => m.CurrentPassword, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", placeholder = "Nhập mật khẩu hiện tại", autofocus = "autofocus" })
                        @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.NewPassword, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Nhập mật khẩu mới" })
                        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger small" })
                        <small class="text-muted">Ít nhất 6 ký tự, gồm chữ hoa, thường, số và ký tự đặc biệt</small>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Xác nhận mật khẩu mới" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-lg"></i> Đổi mật khẩu
                        </button>
                        @Html.ActionLink("Hủy", "Profile", "Account", null, new { @class = "btn btn-outline-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
