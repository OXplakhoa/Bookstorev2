@{
    ViewBag.Title = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center mt-5">
        <div class="card shadow">
            <div class="card-body py-5">
                <i class="bi bi-shield-exclamation text-danger" style="font-size: 5rem;"></i>
                <h2 class="mt-3">Access Denied</h2>
                <p class="lead text-muted">You don't have permission to access this resource.</p>
                <hr />
                <div class="d-flex justify-content-center gap-3">
                    @Html.ActionLink("Go Home", "Index", "Home", null, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-outline-secondary" })
                </div>
            </div>
        </div>
    </div>
</div>
