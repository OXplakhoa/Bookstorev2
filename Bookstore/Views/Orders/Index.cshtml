@model Bookstore.ViewModels.OrderListViewModel
@{
    ViewBag.Title = "Đơn hàng của tôi";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="bi bi-bag-check me-2"></i>Đơn hàng của tôi
            </h2>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Status Filter -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        <a href="@Url.Action("Index")" 
                           class="btn @(string.IsNullOrEmpty(Model.CurrentStatus) ? "btn-primary" : "btn-outline-primary")">
                            <i class="bi bi-list-ul me-1"></i>Tất cả
                        </a>
                        <a href="@Url.Action("Index", new { status = "Pending" })" 
                           class="btn @(Model.CurrentStatus == "Pending" ? "btn-warning" : "btn-outline-warning")">
                            <i class="bi bi-clock me-1"></i>Chờ xử lý
                        </a>
                        <a href="@Url.Action("Index", new { status = "Processing" })" 
                           class="btn @(Model.CurrentStatus == "Processing" ? "btn-info" : "btn-outline-info")">
                            <i class="bi bi-gear me-1"></i>Đang xử lý
                        </a>
                        <a href="@Url.Action("Index", new { status = "Shipped" })" 
                           class="btn @(Model.CurrentStatus == "Shipped" ? "btn-primary" : "btn-outline-primary")">
                            <i class="bi bi-truck me-1"></i>Đang giao
                        </a>
                        <a href="@Url.Action("Index", new { status = "Delivered" })" 
                           class="btn @(Model.CurrentStatus == "Delivered" ? "btn-success" : "btn-outline-success")">
                            <i class="bi bi-check-circle me-1"></i>Đã giao
                        </a>
                        <a href="@Url.Action("Index", new { status = "Cancelled" })" 
                           class="btn @(Model.CurrentStatus == "Cancelled" ? "btn-danger" : "btn-outline-danger")">
                            <i class="bi bi-x-circle me-1"></i>Đã hủy
                        </a>
                    </div>
                </div>
            </div>

            @if (!Model.Orders.Any())
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-bag-x display-1 text-muted"></i>
                        <h4 class="mt-3">Không có đơn hàng nào</h4>
                        <p class="text-muted">
                            @if (!string.IsNullOrEmpty(Model.CurrentStatus))
                            {
                                <text>Bạn chưa có đơn hàng nào ở trạng thái này.</text>
                            }
                            else
                            {
                                <text>Bạn chưa có đơn hàng nào. Hãy bắt đầu mua sắm!</text>
                            }
                        </p>
                        <a href="@Url.Action("Index", "Products")" class="btn btn-primary mt-2">
                            <i class="bi bi-shop me-1"></i>Mua sắm ngay
                        </a>
                    </div>
                </div>
            }
            else
            {
                <!-- Orders List -->
                <div class="row g-3">
                    @foreach (var order in Model.Orders)
                    {
                        <div class="col-12">
                            <div class="card order-card h-100">
                                <div class="card-header bg-light d-flex justify-content-between align-items-center flex-wrap gap-2">
                                    <div>
                                        <strong>Đơn hàng: @order.OrderNumber</strong>
                                        <small class="text-muted ms-2">
                                            @order.OrderDate.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </div>
                                    <span class="@order.StatusBadgeClass">@order.StatusDisplayText</span>
                                </div>
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            <img src="@order.FirstProductImage" alt="Product" 
                                                 class="rounded" style="width: 80px; height: 80px; object-fit: cover;">
                                        </div>
                                        <div class="col">
                                            <div class="mb-1">
                                                <strong>@order.ItemCount sản phẩm</strong>
                                            </div>
                                            <div class="text-muted small">
                                                <i class="bi bi-credit-card me-1"></i>@order.PaymentMethod
                                                <span class="mx-2">|</span>
                                                <i class="bi bi-wallet2 me-1"></i>@order.PaymentStatusDisplayText
                                            </div>
                                        </div>
                                        <div class="col-auto text-end">
                                            <div class="h5 mb-1 text-primary">
                                                @string.Format("{0:N0}₫", order.Total)
                                            </div>
                                            <a href="@Url.Action("Details", new { id = order.OrderId })" 
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye me-1"></i>Chi tiết
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                if (Model.TotalPages > 1)
                {
                    <nav aria-label="Order pagination" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { status = Model.CurrentStatus, page = Model.CurrentPage - 1 })">
                                    <i class="bi bi-chevron-left"></i> Trước
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { status = Model.CurrentStatus, page = i })">@i</a>
                                </li>
                            }

                            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { status = Model.CurrentStatus, page = Model.CurrentPage + 1 })">
                                    Sau <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .order-card {
            transition: box-shadow 0.2s ease-in-out;
        }
        .order-card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
    </style>
}
